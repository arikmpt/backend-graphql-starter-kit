{
  "name": "@arikmpt/backend-graphql-starter-kit",
  "version": "0.0.1",
  "description": "this stater kit using graphql, mongoose , and graphql code generator",
  "main": "index.js",
  "author": "arikmpt",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc -p .",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts --fix .",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "migrate:dev": "cross-env NODE_ENV=development migrate-mongo up",
    "migrate:prod": "cross-env NODE_ENV=production migrate-mongo up",
    "migrate:test": "cross-env NODE_ENV=test migrate-mongo up",
    "prepare": "husky install"
  },
  "dependencies": {
    "apollo-server": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-import-node": "^0.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-resolvers": "2.5.2",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.19",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "cross-env": "^7.0.3",
    "eslint": "7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "migrate-mongo": "^8.2.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
